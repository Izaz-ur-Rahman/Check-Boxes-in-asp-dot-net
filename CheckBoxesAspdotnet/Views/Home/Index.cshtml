@model CheckBoxesAspdotnet.Models.ViewModel
@{
    ViewData["Title"] = "Home Page";
}
<form asp-controller="Home" asp-action="Index" method="post">
    <label>Sports You Like: </label>
    @foreach (var item in Model.CheckBoxes)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox"  value="@item.Value" id="checkbox_@item.Value" name="sports" checked="@item.IsChecked">
            <label class="form-check-label" for="flexCheckDefault">
         @item.Text
            </label>
        </div>
    }
    <br>
    <input value="Submit" type="submit" class="btn btn-success" />
</form>

